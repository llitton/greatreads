generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  phone         String?
  notifyEmail   Boolean   @default(true)
  notifySms     Boolean   @default(false)
  isGiftUser    Boolean   @default(false) // For Mark Thomas Litton
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts             Account[]
  sessions             Session[]
  friendSources        FriendSource[]
  friendFiveStarEvents FriendFiveStarEvent[]
  userBookStatuses     UserBookStatus[]
  topTens              TopTen[]
  topTenRequestsSent   TopTenRequest[]       @relation("RequestsSent")
  notifications        NotificationLog[]
  goodreadsImports     GoodreadsImport[]
  rssSources           RssSource[]
  rssItemActions       RssItemAction[]
  circleMemberships    CircleMembership[]
}

// ═══════════════════════════════════════════════════════════════════
// Person: A real human identity in someone's circle
// This is the canonical representation. There is only one Ken.
// ═══════════════════════════════════════════════════════════════════

model Person {
  id              String   @id @default(cuid())
  displayName     String   // "Ken"
  normalizedName  String   // "ken" (lowercase, trimmed, collapsed spaces)
  avatarUrl       String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  rssSources      RssSource[]
  friendSources   FriendSource[]
  memberships     CircleMembership[]

  @@index([normalizedName])
}

// ═══════════════════════════════════════════════════════════════════
// CircleMembership: Whether a user trusts a person
// This is what "Your Circle" actually means.
// ═══════════════════════════════════════════════════════════════════

model CircleMembership {
  id        String    @id @default(cuid())
  userId    String
  personId  String

  createdAt DateTime  @default(now())
  mutedAt   DateTime? // optional "keep but don't notify"

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  person    Person    @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([userId, personId])
  @@index([userId])
  @@index([personId])
}

model FriendSource {
  id             String    @id @default(cuid())
  userId         String
  label          String // Friend's name (legacy, prefer Person.displayName)
  rssUrl         String?   @db.Text // Optional now - not needed for import-based sources
  sourceUserId   String?   // Link to the actual user account (for import-based sources)
  sourceType     String    @default("rss") // 'rss' or 'import'
  lastFetchedAt  DateTime?
  lastEtag       String?
  lastModified   String?
  active         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Link to canonical Person identity
  personId       String?
  person         Person?   @relation(fields: [personId], references: [id], onDelete: SetNull)

  user       User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  events     FriendFiveStarEvent[]

  @@index([userId])
  @@index([active])
  @@index([sourceUserId])
  @@index([personId])
}

model Book {
  id               String   @id @default(cuid())
  title            String
  author           String?
  goodreadsBookId  String?  // Goodreads book ID for deduplication
  goodreadsBookUrl String?  @db.Text
  coverUrl         String?  @db.Text
  isbn             String?
  isbn13           String?
  yearPublished    Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Cover enrichment fields
  coverSource      CoverSource?      // Where the cover came from
  coverConfidence  CoverConfidence?  // How confident we are in the match
  coverUpdatedAt   DateTime?         // When the cover was last fetched/updated

  events           FriendFiveStarEvent[]
  userBookStatuses UserBookStatus[]
  topTenItems      TopTenItem[]
  rssItemActions   RssItemAction[]
  resolvedCover    BookCover?      // Canonical cover (use this, not coverUrl)

  @@index([title])
  @@index([isbn])
  @@index([isbn13])
  @@index([goodreadsBookId])
  @@index([coverUrl])  // For finding books missing covers
}

model FriendFiveStarEvent {
  id             String   @id @default(cuid())
  userId         String
  friendSourceId String
  externalGuid   String   @unique // Dedupe key
  bookId         String
  friendName     String
  rating         Int      @default(5)
  reviewText     String?  @db.Text
  eventUrl       String?  @db.Text
  eventDate      DateTime?
  rawPayload     Json?
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  friendSource FriendSource @relation(fields: [friendSourceId], references: [id], onDelete: Cascade)
  book         Book         @relation(fields: [bookId], references: [id])

  @@index([userId])
  @@index([friendSourceId])
  @@index([bookId])
  @@index([createdAt])
}

enum BookStatus {
  WANT_TO_READ
  READING
  READ
}

enum CoverSource {
  OPENLIBRARY_ISBN
  OPENLIBRARY_SEARCH
  OPENLIBRARY_OLID
  GOOGLEBOOKS
  GOODREADS
  MANUAL
}

enum CoverConfidence {
  HIGH    // ISBN match found + cover exists
  MEDIUM  // Title/author search match with strong similarity
  LOW     // Weak match but has an image (put in review queue)
}

enum CoverStatus {
  PENDING     // Not yet resolved
  RESOLVING   // Currently being fetched
  ACTIVE      // Successfully cached
  DEGRADED    // Source available but caching failed
  FAILED      // No cover found after all attempts
}

// ═══════════════════════════════════════════════════════════════════
// BookCover: Canonical cover asset for a book
// UI should ONLY reference this, never external sources directly
// ═══════════════════════════════════════════════════════════════════

model BookCover {
  id            String          @id @default(cuid())
  bookId        String          @unique
  book          Book            @relation(fields: [bookId], references: [id], onDelete: Cascade)

  // Resolved asset we control (CDN URL)
  imageUrl      String?         @db.Text  // Our cached CDN URL
  width         Int?
  height        Int?
  aspectRatio   Float?          // e.g., 0.67 for 2:3

  // Source tracking
  source        CoverSource?
  sourceId      String?         // OLID, ISBN, volumeId, etc.
  sourceUrl     String?         @db.Text  // Original URL before caching
  confidence    CoverConfidence?

  // Status tracking
  status        CoverStatus     @default(PENDING)
  failureReason String?         // Why it failed
  attemptCount  Int             @default(0)
  lastAttemptAt DateTime?
  resolvedAt    DateTime?

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([status])
  @@index([source])
  @@index([confidence])
}

model UserBookStatus {
  id               String     @id @default(cuid())
  userId           String
  bookId           String
  status           BookStatus
  userRating       Int?       // 1-5
  userNotes        String?    @db.Text
  isFavorite       Boolean    @default(false) // From Goodreads "favorites" shelf
  isPublic         Boolean    @default(true)  // Whether 5-star rating is visible to followers
  dateRead         DateTime?  // Original read date from Goodreads
  readCount        Int        @default(1)     // Number of times read
  importedAt       DateTime?  // When this was imported (null = manually added)
  sourcePersonName String?    // Who this book came from (e.g., "Laura") - for gift framing
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book         @relation(fields: [bookId], references: [id], onDelete: Cascade)
  canonEntry  CanonEntry?  // If in user's canon
  stayedEntry StayedEntry? // If in user's "Stayed" list
  reflection  Reflection?  // User's reflection on this book
  signals     BookSignal[] // System-detected signals

  @@unique([userId, bookId])
  @@index([userId])
  @@index([bookId])
  @@index([userRating])
  @@index([isFavorite])
  @@index([sourcePersonName])
}

// ═══════════════════════════════════════════════════════════════════
// Canon: First-class relationship between a user and their defining books
// Canon is not a property of a book—it's a meaningful relationship.
// ═══════════════════════════════════════════════════════════════════

model CanonEntry {
  id             String    @id @default(cuid())
  userBookId     String    @unique
  userBook       UserBookStatus @relation(fields: [userBookId], references: [id], onDelete: Cascade)

  // Required: You cannot add to canon without a reflection
  reflectionId   String    @unique
  reflection     Reflection @relation(fields: [reflectionId], references: [id])

  position       Int       // Ordering/ranking in canon (1-based)

  addedAt        DateTime  @default(now())
  removedAt      DateTime? // null = active canon entry

  @@index([userBookId])
  @@index([addedAt])
  @@index([reflectionId])
}

// ═══════════════════════════════════════════════════════════════════
// Stayed: Books that kept returning to the user
// Stayed is for reflection. Canon is for identity.
// ═══════════════════════════════════════════════════════════════════

enum SignalType {
  REVISITED          // User came back to this book
  UNRESOLVED         // Started but abandoned reflection, or keeps editing
  PERSPECTIVE_SHIFT  // Explicit indication the book changed their view
}

model BookSignal {
  id           String     @id @default(cuid())
  userBookId   String
  userBook     UserBookStatus @relation(fields: [userBookId], references: [id], onDelete: Cascade)

  type         SignalType
  confidence   Float      @default(0)  // 0-1, decays over time
  detectedAt   DateTime   @default(now())
  lastActivityAt DateTime @default(now())  // For decay calculation

  @@index([userBookId])
  @@index([confidence])
  @@index([type])
}

model Reflection {
  id           String    @id @default(cuid())
  userBookId   String    @unique
  userBook     UserBookStatus @relation(fields: [userBookId], references: [id], onDelete: Cascade)

  content      String    @db.Text
  kind         ReflectionKind @default(NOTE)  // How this reflection was created
  visibility   String    @default("PRIVATE")  // PRIVATE only for now
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Inverse relation for canon entries that reference this reflection
  canonEntry   CanonEntry?

  @@index([userBookId])
  @@index([updatedAt])
  @@index([kind])
}

enum StayedSource {
  SYSTEM  // Added via signal threshold
  USER    // Explicitly added by user
}

// ═══════════════════════════════════════════════════════════════════
// ReflectionKind: How the reflection was created
// Used for canon-ready scoring - prompted reflections count more
// ═══════════════════════════════════════════════════════════════════

enum ReflectionKind {
  NOTE     // Free-form note the user wrote
  PROMPT   // Response to a prompt ("Why did this one stay with you?")
  REVISIT  // Written during canon revisit flow
}

model StayedEntry {
  id           String       @id @default(cuid())
  userBookId   String       @unique
  userBook     UserBookStatus @relation(fields: [userBookId], references: [id], onDelete: Cascade)

  source       StayedSource @default(USER)
  enteredAt    DateTime     @default(now())
  dismissedAt  DateTime?    // For "Revisit" dismissal tracking
  dismissCount Int          @default(0)  // Track how many times dismissed

  @@index([userBookId])
  @@index([enteredAt])
}

model TopTen {
  id        String   @id @default(cuid())
  userId    String
  name      String   @default("Top 10")
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items TopTenItem[]

  @@index([userId])
}

model TopTenItem {
  id        String   @id @default(cuid())
  topTenId  String
  bookId    String
  rank      Int
  createdAt DateTime @default(now())

  topTen TopTen @relation(fields: [topTenId], references: [id], onDelete: Cascade)
  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([topTenId, bookId])
  @@unique([topTenId, rank])
  @@index([topTenId])
}

enum TopTenRequestStatus {
  PENDING
  VIEWED
  RESPONDED
}

model TopTenRequest {
  id           String              @id @default(cuid())
  fromUserId   String
  toEmail      String
  toName       String?
  message      String?             @db.Text
  token        String              @unique
  status       TopTenRequestStatus @default(PENDING)
  responseData Json?               // Store their Top 10 response
  createdAt    DateTime            @default(now())
  viewedAt     DateTime?
  respondedAt  DateTime?

  fromUser User @relation("RequestsSent", fields: [fromUserId], references: [id], onDelete: Cascade)

  @@index([fromUserId])
  @@index([token])
  @@index([toEmail])
}

model NotificationLog {
  id        String   @id @default(cuid())
  userId    String
  type      String   // 'email' or 'sms'
  subject   String?
  body      String   @db.Text
  sentAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sentAt])
}

model CronLog {
  id             String   @id @default(cuid())
  runAt          DateTime @default(now())
  sourcesPolled  Int      @default(0)
  newEventsFound Int      @default(0)
  notificationsSent Int   @default(0)
  errors         Json?
  duration       Int?     // milliseconds
}

// Track Goodreads CSV imports
model GoodreadsImport {
  id               String   @id @default(cuid())
  userId           String
  totalBooks       Int      @default(0)
  fiveStarBooks    Int      @default(0)
  favorites        Int      @default(0)
  booksAdded       Int      @default(0)
  booksSkipped     Int      @default(0)
  booksFailed      Int      @default(0)
  importedAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ═══════════════════════════════════════════════════════════════════
// RSS Inbox System
// ═══════════════════════════════════════════════════════════════════

enum RssSourceStatus {
  DRAFT       // Created, not yet validated
  VALIDATING  // One-off fetch to confirm URL + parseability
  ACTIVE      // Cron should poll it
  PAUSED      // User paused it (never auto-resume)
  BACKOFF     // Temporarily failing; cron should retry later
  FAILED      // Hard failure, requires user action
}

enum FailureReasonCode {
  NONE
  NOT_FEED        // Response is HTML, not RSS/Atom
  UNAUTHORIZED    // 401/403
  NOT_FOUND       // 404
  PARSE_ERROR     // Invalid XML or malformed feed
  TIMEOUT         // Request timed out
  RATE_LIMITED    // 429
  SERVER_ERROR    // 5xx
  PAGINATION_LOOP // Infinite pagination detected
  UNKNOWN
}

model RssSource {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Link to canonical Person identity (nullable for publication feeds)
  personId      String?
  person        Person?   @relation(fields: [personId], references: [id], onDelete: SetNull)

  url           String    @db.Text
  title         String?   // Feed title (auto-detected or override)
  description   String?   @db.Text
  siteUrl       String?   @db.Text

  // State machine
  status              RssSourceStatus   @default(DRAFT)
  failureReasonCode   FailureReasonCode @default(NONE)

  // Timing fields
  lastSuccessAt       DateTime?   // Last successful fetch
  lastAttemptAt       DateTime?   // Last attempt (success or fail)
  nextAttemptAt       DateTime?   // When to retry (for backoff)

  // Failure tracking
  consecutiveFailures Int         @default(0)
  lastHttpStatus      Int?        // Last HTTP status code
  lastError           String?     @db.Text  // Human-readable error message

  // Conditional GET (HTTP caching)
  etag                String?
  lastModified        String?     // Last-Modified header value

  // Dedupe tracking
  lastSeenItemKey     String?     // For dedupe + "no items yet" logic

  // Legacy field (deprecated, use status instead)
  isActive      Boolean   @default(true)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  items         RssItem[]

  @@unique([userId, url])
  @@index([userId, status])
  @@index([status, nextAttemptAt])
  @@index([personId])
}

model RssItem {
  id            String    @id @default(cuid())

  sourceId      String
  source        RssSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  guid          String?   // <guid> or stable unique key
  url           String?   @db.Text
  title         String?
  author        String?
  publishedAt   DateTime?
  rawHtml       String?   @db.Text  // Raw excerpt/content
  cleanText     String?   @db.Text  // Sanitized plain text for display

  // Book extraction fields (parsed from RSS)
  bookTitle     String?
  bookAuthor    String?
  coverImageUrl String?   @db.Text
  isbn          String?

  // Deduplication
  dedupHash     String    // hash of (sourceId + guid/url/title)
  createdAt     DateTime  @default(now())

  actions       RssItemAction[]

  @@unique([sourceId, dedupHash])
  @@index([sourceId, createdAt])
}

enum RssActionStatus {
  UNSEEN
  SEEN
  SAVED
  IGNORED
}

model RssItemAction {
  id         String          @id @default(cuid())
  itemId     String
  item       RssItem         @relation(fields: [itemId], references: [id], onDelete: Cascade)

  userId     String
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  status     RssActionStatus @default(UNSEEN)
  seenAt     DateTime?
  savedAt    DateTime?
  ignoredAt  DateTime?

  // If saved, link to the book it created
  bookId     String?
  book       Book?           @relation(fields: [bookId], references: [id])

  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@unique([userId, itemId])
  @@index([userId, status, updatedAt])
}
